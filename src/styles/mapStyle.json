{
  "version": 8,
  "name": "Phantom Mode - Velocity US",
  "metadata": {
    "mapbox:type": "template",
    "mapbox:autocomposite": true
  },
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "https://api.maptiler.com/tiles/v3/tiles.json?key=get_your_own_OpIi9ZULNHzrESv6T2vL"
    }
  },
  "glyphs": "https://api.maptiler.com/fonts/{fontstack}/{range}.pbf?key=get_your_own_OpIi9ZULNHzrESv6T2vL",
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "hsl(240, 5%, 8%)"
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "water",
      "filter": ["==", "$type", "Polygon"],
      "paint": {
        "fill-color": "hsl(240, 8%, 3%)",
        "fill-opacity": 0.8
      }
    },
    {
      "id": "landcover-grass",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landcover",
      "filter": ["==", "class", "grass"],
      "paint": {
        "fill-color": "hsl(240, 5%, 10%)",
        "fill-opacity": 0.3
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "openmaptiles",
      "source-layer": "landuse",
      "paint": {
        "fill-color": "hsl(240, 5%, 10%)",
        "fill-opacity": 0.2
      }
    },
    {
      "id": "state-borders",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": ["all", ["==", "admin_level", 4], ["==", "maritime", 0]],
      "paint": {
        "line-color": "hsla(0, 0%, 100%, 0.1)",
        "line-width": 1,
        "line-dasharray": [4, 4],
        "line-opacity": 0.5
      }
    },
    {
      "id": "country-borders",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "boundary",
      "filter": ["all", ["==", "admin_level", 2], ["==", "maritime", 0]],
      "paint": {
        "line-color": "hsla(0, 0%, 100%, 0.15)",
        "line-width": 1.5,
        "line-opacity": 0.6
      }
    }
  ]
}

